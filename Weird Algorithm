import java.io.PrintWriter;
        import java.util.*;
class Starting
{
    public static void main(String[] args) {
        Scanner obj=new Scanner(System.in);
        PrintWriter out=new PrintWriter(System.out);
        long n=obj.nextLong();
        out.print(n+" ");
        while(n!=1)
        {
            if(n%2==0)n=n/2;
            else n=n*3+1;
            out.print(n+" ");
        }
        out.flush();
        out.close();
    
